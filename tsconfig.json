{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "script",
        "node_modules"
    ]
}